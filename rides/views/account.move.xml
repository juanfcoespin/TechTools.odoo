<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="account_move_view_inherit">
        <field name="name">account.move.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="action_post" position="after">
                <button name="enviar_sri" type="object" string="Enviar al SRI"
                                class="btn-primary"/>
            </button>
            <field name="amount_untaxed" position="after">
                <field name="total_discount"/>
            </field>
            <field name="amount_total" position="after">
                <field name="retencion_iva"/>
                <field name="retencion_renta"/>
            </field>
        </field>
    </record>
</odoo>
